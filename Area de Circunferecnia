//Pedir el radio de un círculo y calcular su área. A=PI*r^2.

package radiodecirculo;

import java.util.Scanner;

public class RadiodeCirculo {

    
    public static void main(String[] args) {
        
        Scanner input = new Scanner(System.in);
        
        double a, r;
        
        System.out.println("Introduce el radio de un circulo");
        r = input.nextDouble();
        
        a = Math.PI*(r*r);
        
        System.out.println("El area de una circunferencia de radio " + r + "es:" +a);
    }
    
}
