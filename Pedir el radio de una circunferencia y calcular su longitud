// Pedir el radio de una circunferencia y calcular su longitud.

package radiodecircunferenciaconlongitud;


import java.util.Scanner;

public class RadiodeCircunferenciaconLongitud {

    
    public static void main(String[] args) {

        Scanner entrada = new Scanner(System.in);
        double l, r;
        
        System.out.println("Introduce el radio de una circunferencia: ");
        r = entrada.nextDouble();
        
        l = 2  * Math.PI*r;
        
        System.out.println("La longitud de una circunferencia de radio "+ r + "es:" + 1);
    }
}
